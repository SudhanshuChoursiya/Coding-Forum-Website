<%-include('./partials/header.ejs',{cardsData:cardsData,categoriesNavtitle:categoriesNavtitle,categoriesNavdata:categoriesNavdata,loggedin:loggedin}) %>

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="home.css">
    <title>Home</title>
    
    <!-- Favicon links -->
     <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
 
  </head>
  <body>
    
 <% if(success==true){%>
      <div class="alert alert-success alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Sucess!</strong> You have loggedin.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>


<!-- Slider starts from here -->

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="image/img1.png" class="d-block w-100 slider_image" alt="img">
    </div>
    <div class="carousel-item">
      <img src="image/img2.png" class="d-block w-100 slider_image" alt="img">
    </div>
    <div class="carousel-item">
      <img src="image/img3.png" class="d-block w-100 slider_image" alt="img">
    </div>
     <div class="carousel-item slider_image">
      <img src="image/img4.png" class="d-block w-100 slider_image" alt="img">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


<div>
    <h3 class="text-center mt-4">Browse Categories</h3>
</div>


<!-- cards start from here -->

<div class="d-flex justify-content-center flex-wrap my-2 mb-4">
    
    <% cardsData.forEach((e)=>{ %>
        
         <div class="card mx-2 my-2 shadow text-center" style="width: 18rem;">
  <div class="mt-2">          
  <img src="<%=e.category_image%>" class="card-img-top cards_image" alt="img">
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=e.category_title%></h5>
    <p class="card-text"><%=e.category_description.substring(0,108)+"..."%></p>
    <a href="/question?cateid=<%=e.cateid%>" class="btn btn-primary">Click to ask Questions</a>
  </div>
</div>
   <% })%>
  
</div>

   <script src="frontend.js"></script>

    <!--Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

<%-include('./partials/footer.ejs',{cardsData:cardsData}) %>
