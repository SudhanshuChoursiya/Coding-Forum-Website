<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Login</title>
    
    <link rel="stylesheet" href="login.css">
    
     <!-- Favicon link -->
<link rel="apple-touch-icon" sizes="180x180" href="https://coding-forum-website.herokuapp.com/apple-touch-icon.png"> 

<link rel="icon" type="image/png" sizes="32x32" href="https://coding-forum-website.herokuapp.com/favicon-32x32.png">

 <link rel="icon" type="image/png" sizes="16x16" href="https://coding-forum-website.herokuapp.com/favicon-16x16.png">
 
  <link rel="manifest" href="https://coding-forum-website.herokuapp.com/site.webmanifest"> 
  
  <link rel="mask-icon" href="https://coding-forum-website.herokuapp.com/safari-pinned-tab.svg" color="#5bbad5">
  
   <meta name="msapplication-TileColor" content="#00aba9">
    
 <meta name="theme-color" content="#ffffff">
    
  </head>
  <body>
      
      <% if(success==true){%>
      <div class="alert alert-success alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Sucess!</strong> You have loggedin.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%} else if(error==true){%>

 <div class="alert alert-danger alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Error!</strong> Username or password do not match.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%} else if(passnotmatch==true){%>
<div class="alert alert-danger alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Error!</strong>Username or password do not matched.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
    
<%}%>
   
   <div class="container logincontainer">
 <form action="/login" method="post" class="w-75">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Login To Continue</h5>
        
      </div>
      <div class="modal-body">
        <div class="col-lg-12 login_form">
    <label for="username" class="form-label my-1">Username</label>
    <input type="text" class="form-control" name="username" minlength="4" maxlength="12" required>
  </div>
  
  
  <div class="col-lg-12 login_form">
    <label for="password" class="form-label my-1">Password</label>
    <input type="password" class="form-control" name="password" minlength="7" maxlength="15" required>
  </div>
  
  
      </div>
      <div class="modal-footer login_form">
       
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </div>
  </div>
</form>
</div>

    <script src="frontend.js"></script>

    <!--Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

