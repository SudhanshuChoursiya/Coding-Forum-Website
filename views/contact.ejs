<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

   <!-- Favicon link -->
<link rel="apple-touch-icon" sizes="180x180" href="image/apple-touch-icon.png">

<link rel="icon" type="image/png" sizes="32x32" href="image/favicon-32x32.png">

<link rel="icon" type="image/png" sizes="16x16" href="image/favicon-16x16.png">

<link rel="manifest" href="image/site.webmanifest">

<link rel="mask-icon" href="image/safari-pinned-tab.svg" color="#5bbad5">

<meta name="msapplication-TileColor" content="#da532c">

<meta name="theme-color" content="#ffffff">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Contact us</title>
    <link rel="stylesheet" href="contact.css">
  </head>
  <body>
      <% if(success==true){%>
      <div class="alert alert-success alert-dismissible fade show alert_box" role="alert">
  <strong>Sucess!</strong> Your details has been submitted.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%} else if(error==true){%>

 <div class="alert alert-danger alert-dismissible fade show alert_box" role="alert">
  <strong>Error!</strong> Please fill all the field.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>
      
      
    
    <div class="d-flex flex-column heading justify-content-center align-items-center h-100">
        <h3 class="text-center my-2">Contact us</h3>
        
        
        
        <div class="container">
        <form action="/contact" method="post" class="row g-3 mx-4">
            
            <div class="col-md-6 contact_form">
    <label for="firstname" class="form-label label">First name</label>
    <input type="text" class="form-control" id="firstname" name="firstname" minlength="3" maxlength="11" required>
  </div>
  
  <div class="col-md-6 contact_form">
    <label for="lastname" class="form-label label">Last name</label>
    <input type="text" class="form-control" id="lastname" name="lastname" minlength="3" maxlength="11" required>
  </div>
  
  
  <div class="col-md-6 contact_form">
    <label for="inputEmail4" class="form-label label">Email</label>
    <input type="email" class="form-control" id="inputEmail4" name="email">
  </div>
  
   <div class="col-md-6 contact_form">
    <label for="phoneno" class="form-label label">Phone no.</label>
    <input type="tel" class="form-control" id="phoneno" name="phoneno" minlength="10" maxlength="10" required>
  </div>
  
  <div class="col-12 contact_form">
    <label for="inputAddress" class="form-label label">Address</label>
    <input type="text" class="form-control" id="inputAddress" name="address" minlength="5" maxlength="35" required>
  </div>
  
   <div class="form-floating contact_form">
  <textarea class="form-control" placeholder="describe here" id="floatingTextarea2" style="height: 100px" name="problam" minlength="10" maxlength="100" required></textarea>
  <label for="floatingTextarea2">Your problam/query</label>
</div>
 
  
  <div class="col-12 contact_form">
    <button type="submit" class="btn btn-primary">Submit Details</button>
  </div>
</form>
    </div>              
        
    </div>


    <script src="frontend.js"></script>
   

    <!--Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>

