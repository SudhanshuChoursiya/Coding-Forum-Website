  <body>
      
      <% if(success==true){%>
      <div class="alert alert-success alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Sucess!</strong> Your sollution has been submitted.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%} else if(error==true){%>

 <div class="alert alert-danger alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Error!</strong> Please fill all the required field.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>
    
    <% if(deleted==true){%>
      <div class="alert alert-success alert-dismissible fade show alert_box mb-0" role="alert">
  <strong>Sucess!</strong> Deleted successfully.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>
      
        <div>
         <div class="card text-light bg-danger mx-2 shadow-lg my-5" w-100>
  <div class="card-header d-flex justify-content-between question-title-body">
    <div class="question-title-body"> <h1><%=onequestionDetails.question_title%></h1>
    </div>
      <span class="user"><img class="userlogo" src="image/userlogo.png" alt="img"><%=onequestionDetails.username%></span>
  </div>
  <div class="card-body question_desc_body">
    <p class="card-text mb-2">
        <%=onequestionDetails.question_description%>
    </p>
  </div>
</div>

<div class="card text-dark bg-light mx-2 shadow-sm" w-100>
  <div class="card-header py-3">
  Code-Snippet
  </div>
  <div class="card-body code mb-4">
   <p class="card-text code-snippet">
       <span>
     <%=onequestionDetails.code_snippet%>
     </span>
   </p>  
  </div>
</div>
  
</div>        

<div class="main-title">
    <h2 class="text-center my-4">Sollution’s Posted By Community</h2>
</div>

<!-- answers card Start from here -->
   <% answerDetails.forEach((e)=>{%>
   <div class="card mx-2 shadow-sm text-light bg-dark mb-4" w-100>
  <div class="card-header d-flex align-items-center justify-content-between py-3 border-light">
  Sollution <span class="user"><img class="userlogo" src="image/userlogo.png" alt="img"><%=e.username%></span>
  </div>
  <div class="scrolling-container">
  <div class="card-body code d-flex align-items-center justify-content-between useranswer_desc_body">
      
      <div class="useranswer_desc mb-4">
          
      <p class="card-text">
         <span>
      <%=e.answer%>
      </span>
       </p>
       </div>       
  </div>
  </div>
   <% if(e.username==username){%>
         <div class="buttonofdelete">
    <form action="/delete-answer?commentid=<%=commentid%>" method="post">
       <input type="hidden" value="<%=e._id%>" name="boxid"> 
        
 <button class="btn btn-success py-2 mx-2 delete_btn" type="submit">Delete</button></form>
     </div>
   <% }%>
</div>
<%})%>


<% if(nodata==true){%>
    
    <div class="d-flex flex-column nodatabody mx-2 mb-4">
        <h4 class="mt-4 text-center">No Sollution yet</h4>
        
       <p class="text-center py-2">Be the first one to help</p>
        
    </div>
  
<%}%>
    
    <div class="main-title mb-1">
       <h3 class="text-center my-4">Post your Comment’s</h3>
   </div>

    <% if(loggedin==true){%>
    <form action="/answer?commentid=<%=commentid%>" method="post" class="row g-3 mx-4 mb-4">
   
  <div class="form-floating answer_form">
  <textarea class="form-control" placeholder="describe here" id="floatingTextarea2" style="height: 100px" name="answer" minlength="10" maxlength="350" required></textarea>
  <label for="floatingTextarea2">Describe your Suggestion</label>
</div>

 
  <div class="col-md-6 mt-0">
   
    <input type="hidden" value="onequestionDetails._id" class="form-control" id="commentid" name="commentdid">
  </div>
  
  <div class="col-md-6 mt-0">
   
    <input type="hidden" value="<%=username%>" class="form-control" id="username" name="username">
  </div>
   
   <div class="col-12 my-2 mt-3 answer_form">
    <button type="submit" class="postbtn btn-primary">Post</button>
  </div>
</form>
     
<%}else{%>
    <div class="d-flex flex-column nodatabody py-4 mx-2 mb-5">
        <h4 class="mb-3 text-center">Please Login To Post Your Sollutions</h4>
        <div class="d-flex justify-content-center align-items-center">
        <a href="/signup"><button class="btn btn-outline-info py-2 mx-2"  type="button">Signup</button></a>
        
        <a href="/login"><button class="btn btn-outline-warning py-2"  type="button">Login</button></a> 
        </div>        
    </div>
<%}%>
     
     
     <script src="frontend.js"></script>

